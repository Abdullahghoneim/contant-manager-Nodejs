<%- include('../include/navgation.ejs') %>

<body>
  <main>
    <div class="container mt-5">
      <div class="row">
        <div class="col-md-6 float-left">
          <a href="/" class="btn btn-link">back to home</a>
        </div>
        <div class="col-md-6 ">
          <div
            class="btn-group float-right"
            role="group"
            aria-label="Basic example"
          >
            <button type="button" class="btn btn-light">Edite</button>
            <div>
              <form action="/deleteClient" method="POST">
                <input
                  type="hidden"
                  name="clientId"
                  value="<%=clientDetails._id %>"
                />
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>
            </div>
          </div>
        </div>
      </div>
      <div>
        <div>
          <div class="card mt-4">
            <div class="card-header">
              <h5><%= clientDetails.name %></h5>
            </div>
            <div class="card body">
              <ul class="list-group">
                <li class="list-group-item">
                  <span>Name : </span> <%= clientDetails.name %>
                </li>
                <li class="list-group-item">
                  <span>Email : </span> <%= clientDetails.email %>
                </li>
                <li class="list-group-item">
                  <span>Phone : </span> <%= clientDetails.phone %>
                </li>
                <li class="list-group-item">
                  <span>Balance : </span> <%= clientDetails.balance %>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</body>
